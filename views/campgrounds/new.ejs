<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Camp</h1>
        <div class="col-6 offset-3">
        </div>
        <h1>add one camp</h1>
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Campground Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]"
                    placeholder="campground title" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0" required
                        aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Campground location</label>
                <input class="form-control" type="text" id="location" required name="campground[location]"
                    placeholder="campground location">
                <div class="valid-feedback">Looks good!</div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="description">Campground description</label>
                <textarea class="form-control" type="text" id="description" required name="campground[description]"
                    placeholder="campground description"></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Campground images</label>
                <div class="custom-file input-group mb-3">
                    <input type="file" class="form-control" name="image" id="inputGroupFile02" multiple>
                    <label class="input-group-text custom-file-label" for="inputGroupFile02">Upload</label>
                </div>
            </div>

            <!-- <div class="mb-3">
                <label class="form-file-label" for="image">
                    Campground images</label>
                <input type="file" multiple name="image" id="image">
            </div> -->

            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>

    </div>


    <a href="/campgrounds"> All Campgrounds</a>