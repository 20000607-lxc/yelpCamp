<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Camp</h1>
        <div class="col-6 offset-3">
        </div>
        <h1>modify one camp</h1>
        <form action="/campgrounds/<%=camp._id %>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Campground Title</label>
                <input class="form-control" type="text" id="title" value="<%=camp.title %>" required
                    name="campground[title]" placeholder="campground name">
                <div class="valid-feedback">Looks good!</div>

            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" required value="<%=camp.price %>"
                        name="campground[price]" placeholder="0" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
                <div class="valid-feedback">Looks good!</div>

            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Campground location</label>
                <input class="form-control" type="text" id="location" required value="<%=camp.location %>"
                    name="campground[location]" placeholder="campground location">
                <div class="valid-feedback">Looks good!</div>

            </div>
            

            <div class="mb-3">
                <label class="form-label" for="description">Campground description</label>
                <textarea class="form-control" type="text" id="description" required name="campground[description]"
                    placeholder="campground description"><%=camp.description %></textarea>
                <div class="valid-feedback">Looks good!</div>

            </div>
            <div class="mb-3">
                <label class="form-label">Campground images</label>
                <div class="custom-file input-group mb-3">
                    <input type="file" class="form-control" name="image" id="inputGroupFile02" multiple>
                    <label class="input-group-text custom-file-label" for="inputGroupFile02">Upload</label>
                </div>
            </div>
            <div class="mb-3">
                <% camp.images.forEach(function(img, i) { %> 
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">delete?</label>
                    <% }) %> 
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Save</button>
            </div>
        </form>

    </div>
    <a href="/campgrounds"> All Campgrounds</a>